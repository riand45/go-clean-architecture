# =================================
# Application Configuration
# =================================
APP_NAME=dummy-event
APP_ENV=development
APP_PORT=3000

# =================================
# PostgreSQL Configuration
# =================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=dummy_event
DB_SSL_MODE=disable
DB_MAX_CONNECTIONS=25
DB_MAX_IDLE_CONNECTIONS=5
DB_MAX_LIFETIME_MINUTES=5

# =================================
# Redis Configuration
# =================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =================================
# Google OAuth2 Configuration
# =================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL=http://localhost:3000/api/v1/auth/google/callback

# =================================
# JWT RSA Configuration
# =================================
JWT_PRIVATE_KEY_PATH=./keys/private.pem
JWT_PUBLIC_KEY_PATH=./keys/public.pem
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_ISSUER=dummy-event

# =================================
# Email SMTP Configuration
# =================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com
SMTP_FROM_NAME=Dummy Event

# =================================
# OTP Configuration
# =================================
OTP_LENGTH=6
OTP_EXPIRE_MINUTES=5

# =================================
# Encryption Configuration
# =================================
# 32-byte base64 encoded key for AES-256 encryption
# Generate one using: openssl rand -base64 32
ENCRYPTION_KEY=your_32_byte_base64_encoded_key_here
